---
import Layout from "@/layouts/Layout.astro";
import { LucideArrowLeft } from "@lucide/astro";
---

<Layout
  title="Página no encontrada | INFRALUX"
  description="Lo sentimos, la página que buscas no existe o ha sido movida."
>
  <div
    class="h-screen flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden"
  >
    <!-- Blob de fondo -->
    <div class="blob-glow w-64 h-64 bg-primary/30 -top-10 -left-10"></div>
    <div class="blob-glow w-72 h-72 bg-support-2/30 bottom-10 right-10"></div>

    <!-- Contenido principal -->
    <div
      class="text-center z-20 max-w-2xl mx-auto flex flex-col gap-8 items-center justify-center"
    >
      <h1 class="text-9xl font-bold gradient-text-animate">404</h1>
      <h2 class="text-3xl md:text-4xl font-family-title">
        Página no encontrada
      </h2>
      <p class="text-xl">
        Lo sentimos, la página que estás buscando no existe o ha sido movida a
        otra ubicación.
      </p>

      <a
        href="/"
        class="inline-flex items-center gap-2 bg-primary hover:bg-primary/80 text-text px-6 py-3 rounded-md transition-all duration-300 hover:scale-105"
      >
        <LucideArrowLeft class="w-5 h-5" />
        Volver al inicio
      </a>
    </div>
  </div>
</Layout>
