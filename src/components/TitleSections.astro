---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- Blobs de fondo para efecto visual -->
<div class="blob-glow w-64 h-64 bg-primary/20 -top-10 right-10 opacity-60">
</div>
<div class="blob-glow w-72 h-72 bg-support-2/20 bottom-20 left-10 opacity-60">
</div>

<!-- Contenedor principal -->
<div class="flex flex-col items-center text-center mb-16 relative z-10">
  <!-- Título con animación y línea de gradiente -->
  <h2 class="text-4xl md:text-5xl font-family-title font-bold mb-4 relative">
    {title}
    <span
      class="block h-1 w-32 mx-auto mt-4 bg-gradient-to-r from-primary via-support-1 to-support-2 rounded-full animate-pulse"
    ></span>
  </h2>

  <!-- Descripción con estilo mejorado -->
  <p class="text-xl max-w-2xl mx-auto mt-4 text-text/80">
    <slot />
  </p>
</div>
