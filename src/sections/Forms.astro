---
import Whatsapp from "@/components/icons/Whatsapp.astro";
import {
  LucideCheckCircle,
  LucideClock,
  LucideFacebook,
  LucideInfo,
  LucideInstagram,
  LucideLinkedin,
  LucideMail,
  LucideMapPin,
  LucidePhone,
  LucideSend,
  LucideShare2,
  LucideTwitter,
} from "@lucide/astro";
---

<section
  id="contacto"
  class="py-20 px-4 md:px-8 lg:px-16 relative overflow-hidden animate-fade-in-up"
>
  <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
    <!-- Formulario de contacto -->
    <div class="contact-form-container col-span-3">
      <div
        class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10 h-full"
      >
        <h3 class="text-2xl font-semibold mb-6 flex items-center gap-2">
          <LucideMail class="w-6 h-6 text-primary" />
          <span>Envíanos un mensaje</span>
        </h3>

        <form
          id="contactForm"
          class="space-y-6 grid grid-cols-2 gap-4 h-full py-12"
        >
          <div class="form-group">
            <label
              for="nombre"
              class="block text-sm font-medium text-secondary mb-1"
              >Nombre completo</label
            >
            <input
              type="text"
              id="nombre"
              name="nombre"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
              placeholder="Tu nombre"
              required
            />
          </div>
          <div class="form-group">
            <label
              for="empresa"
              class="block text-sm font-medium text-secondary mb-1"
              >Empresa</label
            >
            <input
              type="text"
              id="empresa"
              name="empresa"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
              placeholder="Nombre de tu empresa"
              required
            />
          </div>

          <div class="form-group">
            <label
              for="email"
              class="block text-sm font-medium text-secondary mb-1"
              >Correo electrónico</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
              placeholder="tu@email.com"
              required
            />
          </div>

          <div class="form-group">
            <label
              for="telefono"
              class="block text-sm font-medium text-secondary mb-1"
              >Teléfono</label
            >
            <input
              type="tel"
              id="telefono"
              name="telefono"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
              placeholder="Tu número de teléfono"
              required
            />
          </div>

          <div class="form-group col-span-2">
            <label
              for="servicio"
              class="block text-sm font-medium text-secondary mb-1"
              >Servicio de interés</label
            >
            <select
              id="servicio"
              name="servicio"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
            >
              <option value="">Selecciona un servicio</option>
              <option value="implementacion">Implementación SAP</option>
              <option value="migracion">Migración a S/4HANA</option>
              <option value="soporte">Soporte y mantenimiento</option>
              <option value="consultoria">Consultoría SAP</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div class="form-group col-span-2">
            <label
              for="mensaje"
              class="block text-sm font-medium text-secondary mb-1"
              >Mensaje</label
            >
            <textarea
              id="mensaje"
              name="mensaje"
              rows="4"
              class="w-full bg-background border border-secondary/20 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
              placeholder="Cuéntanos sobre tu proyecto o necesidades"
              required></textarea>
          </div>

          <div class="form-submit col-span-2 items-center justify-center flex">
            <button
              type="submit"
              class="w-fit cursor-pointer bg-primary hover:bg-primary/90 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg flex items-center justify-center gap-2"
            >
              <LucideSend class="w-5 h-5" />
              Enviar mensaje
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Información de contacto -->
    <div class="contact-info-container space-y-8 col-span-2">
      <!-- Tarjeta de información principal -->
      <div
        class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10"
      >
        <h3 class="text-2xl font-semibold mb-6 flex items-center gap-2">
          <LucideInfo class="w-6 h-6 text-primary" />
          <span>Información de contacto</span>
        </h3>

        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="bg-primary/10 p-3 rounded-full">
              <LucideMapPin class="w-6 h-6 text-primary" />
            </div>
            <div>
              <h4 class="font-medium text-lg">Dirección</h4>
              <p class="text-secondary">
                Av. Reforma 123, Col. Centro<br />Puebla, Puebla, México
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-primary/10 p-3 rounded-full">
              <LucidePhone class="w-6 h-6 text-primary" />
            </div>
            <div>
              <h4 class="font-medium text-lg">Teléfono</h4>
              <p class="text-secondary">(+52) 222 123 4567</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-primary/10 p-3 rounded-full">
              <LucideMail class="w-6 h-6 text-primary" />
            </div>
            <div>
              <h4 class="font-medium text-lg">Correo electrónico</h4>
              <p class="text-secondary">contacto@infralux.com</p>
            </div>
          </div>
        </div>
      </div>

      <div class="grid gap-8 sm:grid-cols-2">
        <!-- Horario de atención -->
        <div
          class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10"
        >
          <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
            <LucideClock class="w-5 h-5 text-primary" />
            <span>Horario de atención</span>
          </h3>

          <ul class="space-y-3" aria-label="Horario de atención">
            <li
              class="flex flex-col items-center justify-center text-sm md:text-base"
            >
              <span class="text-secondary">Lunes – Viernes</span>
              <span class="font-medium text-text">9:00 AM – 6:00 PM</span>
            </li>
            <li
              class="flex flex-col items-center justify-center text-sm md:text-base"
            >
              <span class="text-secondary">Sábados</span>
              <span class="font-medium text-text">9:00 AM – 1:00 PM</span>
            </li>
            <li
              class="flex flex-col items-center justify-center text-sm md:text-base"
            >
              <span class="text-secondary">Domingos</span>
              <span class="font-medium text-text">Cerrado</span>
            </li>
          </ul>
        </div>

        <!-- Por Qué Elegirnos -->
        <div
          class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10"
        >
          <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
            <LucideCheckCircle class="w-5 h-5 text-primary" />
            <span>¿Por Qué Elegirnos?</span>
          </h3>

          <ul class="space-y-3" aria-label="Ventajas competitivas">
            {
              [
                "Consulta inicial gratuita",
                "Respuesta en menos de 24 h",
                "Consultores certificados SAP",
                "Metodología probada",
                "Soporte post-implementación",
              ].map((text) => (
                <li class="flex items-start gap-2 text-sm md:text-base">
                  <LucideCheckCircle
                    class="w-4 h-4 text-green-700 mt-0.5 flex-shrink-0"
                    aria-hidden="true"
                  />
                  <span>{text}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div class="flex w-full items-center justify-center gap-8">
        <!-- Redes sociales -->
        <div
          class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10 flex-1"
        >
          <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
            <LucideShare2 class="w-5 h-5 text-primary" />
            <span>Síguenos</span>
          </h3>

          <div class="flex gap-4">
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-primary/10 transition-all duration-300"
            >
              <LucideFacebook class="w-6 h-6 text-primary" />
            </a>
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-primary/10 transition-all duration-300"
            >
              <LucideTwitter class="w-6 h-6 text-primary" />
            </a>
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-primary/10 transition-all duration-300"
            >
              <LucideLinkedin class="w-6 h-6 text-primary" />
            </a>
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-primary/10 transition-all duration-300"
            >
              <LucideInstagram class="w-6 h-6 text-primary" />
            </a>
          </div>
        </div>

        <!-- Consulta Emergecia -->
        <div
          class="bg-background-cards p-8 rounded-xl shadow-lg border border-secondary/10 flex-1"
        >
          <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
            <LucidePhone class="w-5 h-5 text-primary" />
            <span>Consulta Emergencia</span>
          </h3>

          <div class="flex gap-4">
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-primary/10 transition-all duration-300"
            >
              <LucidePhone class="w-6 h-6 text-primary" />
            </a>
            <a
              href="#"
              class="bg-background p-3 rounded-full hover:bg-green-500/10 transition-all duration-300"
            >
              <Whatsapp className="w-6 h-6 text-green-500" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mapa -->
  <div class="mt-16">
    <div
      class="bg-background-cards p-4 rounded-xl shadow-lg border border-secondary/10 overflow-hidden w-3/4 mx-auto"
    >
      <div class="aspect-video w-full rounded-lg overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7544.851205454339!2d-98.20573275537932!3d19.000958573035827!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85cfbf5e12520371%3A0x471e3afdf138fca5!2sCd%20Universitaria%2C%2072592%20Heroica%20Puebla%20de%20Zaragoza%2C%20Pue.!5e0!3m2!1ses!2smx!4v1752903521868!5m2!1ses!2smx"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
</section>
