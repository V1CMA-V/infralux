---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="relative overflow-hidden h-[70vh] w-full flex flex-col items-center justify-center gap-6"
>
  <h1
    class="text-5xl md:text-6xl font-extrabold tracking-widest text-center leading-tight drop-shadow-xl"
  >
    {title}
  </h1>

  <p
    class="text-lg md:text-xl font-thin text-text/90 text-balance text-center w-1/2 mx-auto"
  >
    <slot />
  </p>
</section>

<script>
  import gsap from "gsap";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin(SplitText);

  const h1 = document.querySelector("h1");
  const p = document.querySelector("p");

  const splitText = new SplitText(h1, {
    type: "words",
    wordsClass: "word",
  });

  const splitText2 = new SplitText(p, {
    type: "words",
    wordsClass: "word",
  });

  gsap.from(splitText.words, {
    duration: 1,
    y: 50,
    opacity: 0,
    ease: "power3.out",
    stagger: 0.02,
  });

  gsap.from(splitText2.words, {
    duration: 1,
    y: 50,
    opacity: 0,
    ease: "power3.out",
    stagger: 0.02,
  });

  // subtle floating animation for background blob
  gsap.to("#hero-blob", {
    duration: 40,
    rotate: 360,
    ease: "none",
    repeat: -1,
  });
</script>
