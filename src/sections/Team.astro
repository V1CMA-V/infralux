---

<section id="team" class="py-16">
  <TitleSections title="Nuestro Equipo" />

  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 w-full max-w-7xl mx-auto"
  >
    {
      team.map((member) => (
        <div class="flex flex-col items-center gap-4 px-4 py-6 rounded-lg bg-background-cards border border-primary/10 hover:border-primary/30 transition-all duration-300 text-center">
          <img
            src={member.image}
            alt={member.name}
            class="w-24 h-24 rounded-full object-cover object-center hover:scale-105 transition-transform duration-300 border border-primary/10"
          />
          <div>
            <h3 class="text-lg font-bold">{member.name}</h3>
            <p class="text-sm text-text/60">{member.role}</p>
          </div>
          <p class="text-sm text-text/80">{member.description}</p>
        </div>
      ))
    }
  </div>
</section>
